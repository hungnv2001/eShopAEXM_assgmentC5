@using Assignment.Models.DomainClass;
@model Assignment.Models.ViewModel.Product_Img;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Thêm sản phẩm</h4>
<hr />
<div class="row container" style="margin: 0 auto">
    <div class="col-md-10">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
              
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageMainUrl" class="control-label"></label>
                <input asp-for="ImageMainUrl" type="file" class="form-control" />
                <span asp-validation-for="ImageMainUrl" class="text-danger"></span>
            </div>

            <!-- Các trường input cho product Img-->
            <div class="form-group">
                <label asp-for="Url1" class="control-label"></label>
                <input asp-for="Url1" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Url2" class="control-label"></label>
                <input asp-for="Url2" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Url3" class="control-label"></label>
                <input asp-for="Url3" type="file" class="form-control" />
            </div>
            <!--Hết-->
            <div class="form-group">
                <label asp-for="BrandID" class="control-label"></label>
                <select asp-for="BrandID" class ="form-control" asp-items="ViewBag.BrandID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="1">Đang bán</option>
                    <option value="0">Ngừng bán</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
           
        </form>
    </div>
    <div class="col-12">
        <a asp-action="Index">Back to List</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
