@model Assignment.Models.DomainClass.Product

@{
	ViewData["Title"] = "Details";
}
<!--banner-->
<div class="d-flex flex-column bg-light align-items-center justify-content-center mb-5" style="min-height: 300px; background-color:rgb(199, 203, 215)!important">
	<h1 class="font-weight-semi-bold text-uppercase mb-3">Our Shop</h1>
	<div class="d-inline-flex">
		<p class="m-0"><a href="">Home</a></p>
		<p class="m-0 px-2">-</p>
		<p class="m-0"><a asp-action="Shop" asp-controller="Products">Shop</a></p>
		
	</div>
</div>
<input type="hidden" id="hiddenInput" value="@User.Identity.Name">
<div class="container-fluid py-5">
	<div class="row px-xl-5">
		<div class="col-lg-5 pb-5">
			<div id="product-carousel" class="carousel slide" data-ride="carousel">
				<div class="carousel-inner border class=" align-content-center"">
					<div class="carousel-item active text-center">
						<img class="align-content-center" style="height:400px" src="@Model.ImageMainUrl" alt="Image">
					</div>
					<div class="carousel-item text-center">
						<img class="align-content-center text-center" style="height:400px" src="@Model.ProductImgs.ToList()[0].Url1" alt="Image">
					</div>
					<div class="carousel-item text-center">
						<img class="align-content-center text-center" style="height:400px" src="@Model.ProductImgs.ToList()[0].Url2" alt="Image">
					</div>
					<div class="carousel-item text-center">
						<img class="" style="height:400px" src="@Model.ProductImgs.ToList()[0].Url3" alt="Image">
					</div>
				</div>
				<a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
					<i class="fa fa-2x fa-angle-left text-dark"></i>
				</a>
				<a class="carousel-control-next" href="#product-carousel" data-slide="next">
					<i class="fa fa-2x fa-angle-right text-dark"></i>
				</a>
			</div>
		</div>

		<div class="col-lg-7 pb-5">
			<h3 class="font-weight-semi-bold">@Model.Name</h3>
			<div class="d-flex mb-3">
				<div class="text-primary mr-2">
					<small class="fas fa-star"></small>
					<small class="fas fa-star"></small>
					<small class="fas fa-star"></small>
					<small class="far fa-star"></small>
					<small class="far fa-star"></small>

				</div>
				<small class="pt-1">(50 Reviews)</small>
			</div>
			@{
				var listColor = Model.ProductVariants.GroupBy(p => p.ColorID)
				.Select(g => g.First())
				.ToList();
				var listSp = Model.ProductVariants;
			}
			<h3 class="font-weight-semi-bold mb-4">@Model.Price</h3>
			<p class="mb-4" style="white-space: pre-line">@Model.Description</p>
			<form asp-action="AddCart" method="post" id="myForm" asp-controller="CartItems">
			<div class=" mb-3">
				<p class="text-dark font-weight-medium mb-0 mr-3">Màu sắc, kích thước:</p>			
					@foreach (var item in listColor)
					{

						<div class="d-flex ml-5 mr-3">@item.Color.Name :
							@foreach (var i in listSp)
							{
								if (i.ColorID == item.ColorID)
								{
									<div class="custom-control custom-radio custom-control-inline ml-2">
										<input type="radio" class="custom-control-input" value="@i.Id" id="@i.Id" name="IdSP">
										<label class="custom-control-label" for="@i.Id">@i.Size.Name</label>
									</div>
								}
							}
						</div>
						
						<div></div>
									
					}
				
			</div>
			
			<div class="d-flex align-items-center mb-4 pt-2">
					<button type="submit" class="btn btn-primary px-3" ><i class="fa fa-shopping-cart mr-1"></i> Add To Cart</button>
			</div>
			</form>
			<div class="d-flex pt-2">
				<p class="text-dark font-weight-medium mb-0 mr-2">Share on:</p>
				<div class="d-inline-flex">
					<a class="text-dark px-2" href="">
						<i class="fab fa-facebook-f"></i>
					</a>
					<a class="text-dark px-2" href="">
						<i class="fab fa-twitter"></i>
					</a>
					<a class="text-dark px-2" href="">
						<i class="fab fa-linkedin-in"></i>
					</a>
					<a class="text-dark px-2" href="">
						<i class="fab fa-pinterest"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
	<div class="row px-xl-5">
		<div class="col">
			<div class="nav nav-tabs justify-content-center border-secondary mb-4">
				<a class="nav-item nav-link active" data-toggle="tab" href="#tab-pane-1">Giới thiệu</a>
				<a class="nav-item nav-link" data-toggle="tab" href="#tab-pane-2">Thông tin</a>
				<a class="nav-item nav-link" data-toggle="tab" href="#tab-pane-3">Đánh giá (0)</a>
			</div>
			<div class="tab-content">
				<div class="tab-pane fade show active" id="tab-pane-1">
			
					<h5>
						STORIES, STYLES AND SPORTSWEARA HERE ARE WONDERFUL
					</h5>
					<p>
						Chào mừng bạn đến với Eshopper, nơi khám phá thế giới của những trải nghiệm mua sắm đẳng cấp. Tại đây, chúng tôi tự hào giới thiệu đến bạn bộ sưu tập sản phẩm đa dạng và độc đáo, từ thời trang tới đồ điện tử, đồ gia dụng đến đồ chơi sáng tạo.
						<br />
						Sự chọn lọc kỹ lưỡng của chúng tôi đảm bảo rằng mỗi sản phẩm tại Eshopper không chỉ đẹp mắt mà còn đáp ứng được tiêu chí chất lượng cao. Với đội ngũ nhân viên tận tâm và nhiệt huyết, chúng tôi cam kết mang đến trải nghiệm mua sắm trực tuyến tuyệt vời nhất cho khách hàng.
						<br />
						Không chỉ là nơi mua sắm, Eshopper còn là điểm đến để khám phá những ưu đãi và khuyến mãi hấp dẫn. Chúng tôi luôn nỗ lực để đáp ứng mọi nhu cầu và mong muốn của khách hàng, đồng hành cùng bạn trên hành trình tìm kiếm những sản phẩm thú vị và độc đáo.
						<br />
						Hãy đặt chân đến Eshopper ngay hôm nay và trải nghiệm sự khác biệt trong cách chúng tôi mang lại niềm vui qua từng sản phẩm!
					</p>
					
				</div>
				<div class="tab-pane fade" id="tab-pane-2">
					<h4 class="mb-3">Thông tin về chúng tôi</h4>
					<p>
						Eshopper là địa chỉ mua sắm trực tuyến mà bạn đang tìm kiếm nếu bạn đặt trọng điểm vào chất lượng và uy tín. 
						Chúng tôi tự hào mang đến cho khách hàng những sản phẩm chất lượng tuyệt vời, từ thời trang đến đồ điện tử, đa dạng và phong phú.
						<br />
						Chúng tôi cam kết đảm bảo mỗi trải nghiệm mua sắm là một trải nghiệm tuyệt vời. Đội ngũ dịch vụ khách hàng của chúng tôi luôn sẵn sàng hỗ trợ và giải quyết mọi thắc mắc của bạn.
						Giao hàng nhanh chóng và an toàn là điểm mạnh khác, đảm bảo rằng sản phẩm sẽ đến tay bạn một cách nhanh chóng.
						<br />
						Ngoài ra, để làm cho việc mua sắm trở nên thú vị hơn, chúng tôi thường xuyên cung cấp các ưu đãi và khuyến mãi hấp dẫn. 
						Chúng tôi đánh giá cao sự phản hồi từ khách hàng vì nó là nguồn động viên quan trọng, và chúng tôi luôn lắng nghe để ngày càng hoàn thiện dịch vụ của mình.
						<br />
						Hãy đến với Eshopper để trải nghiệm mua sắm trực tuyến mà bạn đáng giá và tin tưởng!
					</p>
			
				</div>
				<div class="tab-pane fade" id="tab-pane-3">
					<div class="row">
						<div class="col-md-6">
							<h4 class="mb-4">1 review for "Colorful Stylish Shirt"</h4>
							<div class="media mb-4">
								<img src="img/user.jpg" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
								<div class="media-body">
									<h6>John Doe<small> - <i>01 Jan 2045</i></small></h6>
									<div class="text-primary mb-2">
										<i class="fas fa-star"></i>
										<i class="fas fa-star"></i>
										<i class="fas fa-star"></i>
										<i class="fas fa-star-half-alt"></i>
										<i class="far fa-star"></i>
									</div>
									<p>Diam amet duo labore stet elitr ea clita ipsum, tempor labore accusam ipsum et no at. Kasd diam tempor rebum magna dolores sed sed eirmod ipsum.</p>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<h4 class="mb-4">Leave a review</h4>
							<small>Your email address will not be published. Required fields are marked *</small>
							<div class="d-flex my-3">
								<p class="mb-0 mr-2">Your Rating * :</p>
								<div class="text-primary">
									<i class="far fa-star"></i>
									<i class="far fa-star"></i>
									<i class="far fa-star"></i>
									<i class="far fa-star"></i>
									<i class="far fa-star"></i>
								</div>
							</div>
							<form>
								<div class="form-group">
									<label for="message">Your Review *</label>
									<textarea id="message" cols="30" rows="5" class="form-control"></textarea>
								</div>
								<div class="form-group">
									<label for="name">Your Name *</label>
									<input type="text" class="form-control" id="name">
								</div>
								<div class="form-group">
									<label for="email">Your Email *</label>
									<input type="email" class="form-control" id="email">
								</div>
								<div class="form-group mb-0">
									<input type="submit" value="Leave Your Review" class="btn btn-primary px-3">
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	
	// Lấy user
	var hiddenInput = document.getElementById("hiddenInput");
	var hiddenValue = hiddenInput.value;
	document.getElementById('myForm').addEventListener('submit', function (event) {
		var radios = document.getElementsByName("IdSP");

		var selectedValue = "";
		for (var i = 0; i < radios.length; i++) {
			if (radios[i].checked) {
				selectedValue = radios[i].value;
				break;
			}
		}
		if (hiddenValue.length == 0) {
			alert("Xin mời đăng nhập")
		}
		else if (selectedValue.length == 0) {
			alert("Bạn chưa chọn sản phẩm nào")
		}
		else {
			alert("Thêm thành công")
		}
	
	});

</script>